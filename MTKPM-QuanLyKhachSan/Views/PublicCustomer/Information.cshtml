﻿@using MTKPM_QuanLyKhachSan.ViewModels
@{
	Layout = "~/Views/Shared/_CustomerLayout.cshtml";
	var Information = ViewBag.Information;

}
@model CustomerVM
<!doctype html>
<html lang="en">
<head>
	<title>Thông Tin Cá Nhân</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<link href='https://fonts.googleapis.com/css?family=Roboto:400,100,300,700' rel='stylesheet' type='text/css'>

	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

	<link rel="stylesheet" href="~/customer/Information/css/style.css">

</head>
<body>
	<section class="ftco-section">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-md-6 text-center mb-5">
					<h2 class="heading-section">Thông tin cá Nhân</h2>
				</div>
			</div>
			<div class="row justify-content-center">
				<div class="col-lg-10">
					<div class="wrapper">
						<div class="row no-gutters">
							<div class="col-md-6 d-flex align-items-stretch">
								<div class="contact-wrap w-100 p-md-5 p-4 py-5">
									<h3 class="mb-4">Thông Tin Cá Nhân</h3>
									<div id="form-message-warning" class="mb-4"></div>
									<div id="form-message-success" class="mb-4">
										Your message was sent, thank you!
									</div>
									<form method="POST" id="contactForm" name="contactForm" class="contactForm">
										<div class="row">
											<div class="col-md-12">
												<div class="form-group">
													<p><span>Họ Tên:</span>@Information.Name</p>
												</div>
											</div>
											<div class="col-md-12">
												<div class="form-group">
													<p><span>Email:</span>@Information.Email</p>
												</div>
											</div>
											<div class="col-md-12">
												<div class="form-group">
													<p><span>Tên Đăng Nhập:</span>@Information.Username</p>
												</div>
											</div>
											<div class="col-md-12">
												<div class="form-group">
													<p><span>Password:</span>@Information.Password</p>
												</div>
											</div>
											<div class="col-md-12">
												<div class="form-group">
													<a asp-controller="PublicCustomer" asp-action="ChangePassword" class="btn btn-primary">Đổi Mật Khẩu</a>
													<div class="submitting"></div>
												</div>
											</div>
											<div class="col-md-12">
												<div class="form-group">
													<a asp-controller="PublicCustomer" asp-action="EditInformation" class="btn btn-primary">Chỉnh Sửa Thông Tin Tài Khoản</a>
													<div class="submitting"></div>
												</div>
											</div>
										</div>
									</form>
								</div>
							</div>
							<div class="col-md-6 d-flex align-items-stretch">
								<div class="info-wrap w-100 p-md-5 p-4 py-5 img">
									<h3>Contact information</h3>
									<p class="mb-4">We're open for any suggestion or just to have a chat</p>
									<div class="dbox w-100 d-flex align-items-start">
										<div class="icon d-flex align-items-center justify-content-center">
											<span class="fa fa-map-marker"></span>
										</div>
										<div class="text pl-3">
											<p><span>Address:</span>@Information.Address</p>
										</div>
									</div>
									<div class="dbox w-100 d-flex align-items-center">
										<div class="icon d-flex align-items-center justify-content-center">
											<span class="fa fa-phone"></span>
										</div>
										<div class="text pl-3">
											<p><span>Phone:</span> <a href="tel://1234567920">@Information.Phone</a></p>
										</div>
									</div>
									<div class="dbox w-100 d-flex align-items-center">
										<div class="icon d-flex align-items-center justify-content-center">
											<span class="fa fa-paper-plane"></span>
										</div>
										<div class="text pl-3">
											<p><span>CCCD:</span> <a href="mailto:info@yoursite.com">@Information.CIC</a></p>
										</div>
									</div>
									<div class="dbox w-100 d-flex align-items-center">
										<div class="icon d-flex align-items-center justify-content-center">
											<span class="fa fa-globe"></span>
										</div>
										<div class="text pl-3">
											<p><span>Website</span> <a href="#">HotelDelLuna.com</a></p>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<script src="~/customer/Information/js/jquery.min.js"></script>
	<script src="~/customer/Information/js/popper.js"></script>
	<script src="~/customer/Information/js/bootstrap.min.js"></script>
	<script src="~/customer/Information/js/jquery.validate.min.js"></script>
	<script src="~/customer/Information/js/main.js"></script>

</body>
</html>

