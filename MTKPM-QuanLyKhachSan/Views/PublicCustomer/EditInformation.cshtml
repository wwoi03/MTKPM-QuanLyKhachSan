@using MTKPM_QuanLyKhachSan.ViewModels
@{
	Layout = "~/Views/Shared/_CustomerLayout.cshtml";
	var Information = ViewBag.Information;

}
@model CustomerVM
<section class="content-header">
	<div class="container-fluid">
		<div class="row mb-2">
			<div class="col-sm-6">
				<h1>Chỉnh Sửa thông Tin Cá Nhân</h1>
			</div>
		</div>
	</div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<form method="post" asp-controller="PublicCustomer" asp-action="EditInformation" class="content" enctype="multipart/form-data">
	<div class="row">
		<div class="col-md-12">
			<div class="card card-primary">
				
				<div class="card-body">

					<div class="form-group">			
						<input type="text" id="inputName" class="form-control" asp-for="Username" value="@Model.Username" hidden>	
					</div>
					<div class="form-group">		
						<input type="text" id="inputName" class="form-control" asp-for="Password" value="@Model.Password" hidden>
					</div>
					<div class="form-group">
						<label for="inputName">Họ Tên</label>
						<input type="text" id="inputName" class="form-control" asp-for="Name" value="@Model.Name">
						<span asp-validation-for="@Model.Name" class="text-danger"></span>
						<span class="text-danger">@ViewBag.messageError</span>
					</div>
					<div class="form-group">
						<label for="inputName">CCCD</label>
						<input type="text" id="inputName" class="form-control" asp-for="CIC" value="@Model.CIC">
						<span asp-validation-for="@Model.CIC" class="text-danger"></span>
						<span class="text-danger">@ViewBag.messageError</span>
					</div>
					<div class="form-group">
						<label for="inputName">SDT</label>
						<input type="text" id="inputName" class="form-control" asp-for="Phone" value="@Model.Phone">
						<span asp-validation-for="@Model.Phone" class="text-danger"></span>
						<span class="text-danger">@ViewBag.messageError</span>
					</div>
					<div class="form-group">
						<label for="inputName">Email</label>
						<input type="text" id="inputName" class="form-control" asp-for="Email" value="@Model.Email">
						<span asp-validation-for="@Model.Email" class="text-danger"></span>
						<span class="text-danger">@ViewBag.messageError</span>
					</div>
					<div class="form-group">
						<label for="inputClientCompany">Địa Chỉ</label>
						<input type="text" id="inputClientCompany" class="form-control" asp-for="Address" value="@Model.Address">
						<span asp-validation-for="@Model.Address" class="text-danger"></span>
						<span class="text-danger">@ViewBag.messageError</span>
					</div>
				</div>
				<!-- /.card-body -->
			</div>
			<!-- /.card -->
		</div>
	</div>
	<div class="row">
		<div class="col-12">
			<a asp-controller="PublicCustomer" asp-action="Information" class="btn btn-secondary">Quay về</a>
			<input type="submit" value="Lưu thông tin" class="btn btn-success float-right">
		</div>
	</div>
</form>
<!-- /.content -->