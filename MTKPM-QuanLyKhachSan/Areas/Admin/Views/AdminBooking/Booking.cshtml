@using MTKPM_QuanLyKhachSan.ViewModels
@model BookingAdminVM
@{
    var AlertMessage = @ViewBag.AlertMessage;
}
@****************************************************@
@if (@AlertMessage != null)
{
	<div class="alert alert-danger" role="alert" style="width: fit-content;margin: auto;" id="alert">
		@AlertMessage
		<button onclick="Hide()" type="button" class="btn btn-warning">Xác nhận</button>
	</div>
}
@**********************************************************@


@if(@AlertMessage == null) 
{
<form id="form-book-room" method="post">
	<!-- Lưu đặt phòng -->
	<div class="panel-save d-flex justify-content-between align-items-center">
		<span>Chỉnh sửa</span>

		<div class="">
			<input type="submit" id="edit-booking" value="Lưu"/>
			<input hidden name="BookRoomId" value="${bookRoom.bookRoomId}" />
		</div>
	</div>

	<!-- Form -->
	<div class="panel-form">
		<!-- Thông tin -->
		<div class="panel-form-info">
			<!-- Tên khách hàng -->
			<div class="panel-form-item">
				<h5 class="panel-form-title">Họ và tên khách hàng</h5>
				<input class="panel-form-input" name="Name" type="text" value="@Model.Name" required/>
			</div>

			<!-- Số điện thoại -->
			<div class="panel-form-item">
				<h5 class="panel-form-title">Số điện thoại</h5>
				<input class="panel-form-input" name="Phone" type="number" value="@Model.Phone" required/>
			</div>

			<!-- CCCD -->
			<div class="panel-form-item">
				<h5 class="panel-form-title">Căn cước công dân</h5>
				<input class="panel-form-input" name="CIC" type="number" value="@Model.CIC" required/>
			</div>

			<!-- Ngày -->
			<div class="panel-form-item">
				<div class="panel-form-height">
					<div class="panel-form-height-item">
						<h5 class="panel-form-title">Ngày nhận phòng</h5>
						<input type="text" readonly class="panel-form-input date-input" name="CheckIn" value="@Model.CheckIn" required/>
					</div>

					<div class="panel-form-height-item">
						<h5 class="panel-form-title">Ngày trả phòng</h5>
						<input type="text" readonly class="panel-form-input date-input" name="CheckOut" value="@Model.CheckOut" required/>
					</div>
				</div>
			</div>

			<!-- Ghi chú -->
			<div class="panel-form-item">
				<h5 class="panel-form-title">Ghi chú</h5>
				<input class="panel-form-input" type="text" name="Note" value="@Model.Note" placeholder="" />
			</div>
		</div>

		<!-- Phòng -->
		<div class="panel-form-room">
			<div class="panel-form-room-item">
				<h5 class="panel-form-title">Thêm phòng</h5>

				<div class="panel-form-add-room">
					<i class="fa-solid fa-square-plus"></i>
					<p class="panel-form-room-btn">Thêm phòng</p>
					<input id="list-room" hidden name="Rooms" />
				</div>
			</div>

			<!-- Danh sách phòng -->
			<div class="d-flex justify-content-between" style="padding: 0 16px;">
				<div class="row p-0 container-fluid panel-form-roomtype-render-list">

					<div value="105" class="col-2-4 panel-form-roomtype-render-item choose">
						101
						<i class="fa-solid fa-circle-xmark"></i>
					</div>

					<div value="105" class="col-2-4 panel-form-roomtype-render-item choose">
						101
						<i class="fa-solid fa-circle-xmark"></i>
					</div>

					<div value="105" class="col-2-4 panel-form-roomtype-render-item choose">
						101
						<i class="fa-solid fa-circle-xmark"></i>
					</div>

					<div value="105" class="col-2-4 panel-form-roomtype-render-item choose">
						101
						<i class="fa-solid fa-circle-xmark"></i>
					</div>

					<div value="105" class="col-2-4 panel-form-roomtype-render-item choose">
						101
						<i class="fa-solid fa-circle-xmark"></i>
					</div>

					<div value="105" class="col-2-4 panel-form-roomtype-render-item choose">
						101
						<i class="fa-solid fa-circle-xmark"></i>
					</div>

				</div>
			</div>
		</div>
	</div>
</form>
}
