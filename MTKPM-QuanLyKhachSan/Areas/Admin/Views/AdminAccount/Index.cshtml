@{
	Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
	var roles = ViewBag.roles;
	var permissionGroups = ViewBag.permissionGroups;
}

<div class="main-container d-flex">
	<!-- Nội dung bên trái -->
	<div class="left-panel col-8 pl-0 pr-0">
		<div class="content container-fluid">
			<div class="page-header">
				<div class="row align-items-center">
					<div class="col">
						<div class="">
							<h4 class="card-title float-left mt-2" style="font-size: 24px">Tất cả nhân viên</h4>
							<a class="btn btn-primary float-right veiwbutton" id="account-create" style="background-color: #009688">Thêm tài khoản phụ</a>
						</div>
					</div>
				</div>

				<div class="row align-items-center" style="margin-top: 20px;">
					<div class="col">
						<form style="position: relative" asp-action="Index" asp-controller="Staff">
							<input type="text" class="form-control" placeholder="Tìm kiếm" name="searchString">
							<button class="btn" type="submit" style="position: absolute; top: 0; right: 0"><i class="fas fa-search"></i></button>
						</form>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-sm-12">
					<div class="card card-table">
						<div class="card-body booking_card">
							<div class="table-responsive">
								<table class="datatable table table-stripped table table-hover table-center mb-0">
									<thead>
										<tr>
											<th style="width: 20%">Tên nhân viên</th>
											<th style="width: 20%">Tên đăng nhập</th>
											<th style="width: 20%">Trạng thái</th>
											<th style="width: 40%">Chức năng</th>
										</tr>
									</thead>
									<tbody>
										<tr>
											<td>tuandao228</td>

											<td>Đào Công Tuấn</td>

											<td>
												<i class="fa-solid fa-circle" style="color: #42B72A; margin-right: 5px; font-size: 12px;"></i>
												@*<i class="fa-solid fa-circle" style="color: #85817C; margin-right: 5px; font-size: 12px;"></i>*@
												Đang hoạt động
											</td>

											<td class="justify-content-between">
												<a data-staff-id="1" class="account-details btn btn-info btn-sm">
													<i class="fas fa-folder"></i>
													Chi tiết
												</a>

												<a data-staff-id="1" class="account-edit btn btn-primary btn-sm">
													<i class="fas fa-pencil-alt"></i>
													Chỉnh sửa
												</a>

												<a data-staff-id="1" class="account-delete btn btn-danger btn-sm">
													<i class="fa-solid fa-key"></i>
													Xóa
												</a>
											</td>
										</tr>
									</tbody>
								</table>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>


	<div class="right-panel col-4 pl-0 pr-0">
		<form>
			<!-- Lưu đặt phòng -->
			<div class="panel-save d-flex justify-content-between align-items-center">
				<span>Thêm mới</span>

				<div class="">
					<input type="submit" value="Lưu" />
				</div>
			</div>

			<!-- Form -->
			<div class="panel-form">
				<!-- Thông tin -->
				<div class="panel-form-info">
					<!-- Tên tài khoản -->
					<div class="panel-form-item">
						<h5 class="panel-form-title">Tên tài khoản</h5>
						<input class="panel-form-input" type="text" />
					</div>

					<!-- Tên tài khoản -->
					<a class="panel-form-item">
						<h5 class="panel-form-title">Tên nhân viên</h5>
						<input class="panel-form-input" type="text" />
					</a>

					<!-- Mật khẩu -->
					<div class="panel-form-item">
						<div class="panel-form-height">
							<div class="panel-form-height-item">
								<h5 class="panel-form-title">Mật khẩu</h5>
								<input type="password" class="panel-form-input" name="CheckIn" required />
							</div>

							<div class="panel-form-height-item">
								<h5 class="panel-form-title">Xác nhận mật khẩu</h5>
								<input type="password" class="panel-form-input" name="CheckOut" required />
							</div>
						</div>
					</div>

					<div class="setting-account">
						<div class="setting-account-title">
							<i class="fa-solid fa-gear"></i>
							<span>Thiết lập quyền hạn</span>
						</div>

						@foreach (var role in roles)
						{
							<div class="setting-account-item">
								<input type="checkbox" id="" value="" />
								<label for="">@role.Name</label>
							</div>

							<div class="setting-account-power">
								<div class="setting-account-list">
									@foreach (var permissionGroup in permissionGroups)
									{
										@if (role.RoleId.Equals(permissionGroup.RoleId))
										{
											<div class="setting-account-item">
												<input type="checkbox" id="" value="" />
												<label for="">@permissionGroup.Permission.Name</label>
											</div>
										}
									}
								</div>
							</div>
						}


						@*<!-- Tên tài khoản -->
							<div class="panel-form-item">
							<h5 class="panel-form-title">Giới tính</h5>
							<input class="panel-form-input" type="text" />
							</div>

							<!-- Tên tài khoản -->
							<div class="panel-form-item">
							<h5 class="panel-form-title">Ngày sinh</h5>
							<input class="panel-form-input" type="text" />
							</div>

							<!-- Tên tài khoản -->
							<div class="panel-form-item">
							<h5 class="panel-form-title">Số điện thoại</h5>
							<input class="panel-form-input" type="text" />
							</div>

							<!-- Tên tài khoản -->
							<div class="panel-form-item">
							<h5 class="panel-form-title">Địa chỉ</h5>
							<input class="panel-form-input" type="text" />
							</div>

							<!-- Tên tài khoản -->
							<div class="panel-form-item">
							<h5 class="panel-form-title">Email</h5>
							<input class="panel-form-input" type="text" />
							</div>*@
					</div>
				</div>
			</div>
		</form>
	</div>
</div>